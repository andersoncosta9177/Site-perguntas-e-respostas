<%- include('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs') ; %> 

<div class="container">
    <hr>
    <h1><%= pergunta.titulo %> </h1>
    
        <p><%= pergunta.descricao %> </p>


    <hr>
    <form action="/responder" method="POST">
        <h3 class="display-5">Responda:</h3>
        <!-- <label for="">Resposta:</label> -->
        <textarea class="form-control" name="corpo" placeholder="Digite sua resposta" id="" cols="30" rows="10"></textarea>
       <input type="hidden" name="pergunta" id="" value="<%= pergunta.id %> ">
        <button class="btn btn-primary w-100 mt-2">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta =>{%>
        <div class="card mb=3">
            <div class="card-body">
               <ul>
                   <li>
                    <p><%= resposta.corpo %> </p>
                   </li>
               </ul>

            </div>

        </div>


 <%}) %> 

</div>

</body>

<%- include ('partials/footer.ejs'); %> 